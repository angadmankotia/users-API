<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <!-- Use .NET 8 LTS for stability -->
    <TargetFramework>net8.0</TargetFramework>

    <!-- Enable nullable reference checks -->
    <Nullable>enable</Nullable>

    <!-- Generate XML docs (optional but nice) -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- This is a web executable -->
    <OutputType>Exe</OutputType>

    <!-- Display friendly app name -->
    <AssemblyName>UsersApi</AssemblyName>

    <!-- Enable implicit global usings (default for SDK-style projects) -->
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- ✅ Entity Framework Core (SQLite support) -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.8" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.8" />

    <!-- ✅ JWT Authentication -->
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.8" />

    <!-- ✅ Swagger (OpenAPI UI) -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>

</Project>
